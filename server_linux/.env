# --- SİSTEM AYARLARI ---
DEBUG=True
API_PORT=8000
INTERFACE=auto
ALLOWED_HOSTS=*

# --- VERİTABANI AYARLARI (PostgreSQL) ---
# Docker Compose içindeki 'db' servisi ile eşleşmeli
POSTGRES_USER=umay_admin
POSTGRES_PASSWORD=umay_password123
POSTGRES_DB=umay_analytics
# Veritabanı URL'si (Docker içi erişim için)
DATABASE_URL=postgresql://umay_admin:umay_password123@localhost:5433/umay_analytics

# --- AĞ VE VPN AYARLARI ---
# Dış dünyaya açılan IP veya VPN IP'si (Umay-Node ismi için kullanılır)
EXTERNAL_IP=127.0.0.1
UMAY_ENABLE_DNS=false
UMAY_REMOTE_MODE=false